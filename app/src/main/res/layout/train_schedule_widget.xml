<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="8dp">

    <!-- Ülemine rida rongijaama nime ja aja jaoks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/stationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elron Tondi"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/departureTime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:41"
            android:textColor="#FF6600"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Alumine rida järgmise väljumise aja jaoks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/stationName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kivimäe"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/departureTime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:50"
            android:textColor="#FF6600"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Kolmas rida kolmanda väljumise aja jaoks -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/stationName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kivimäe"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/departureTime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="#FF6600"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
